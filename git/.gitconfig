[user]
    name = Kumaresan Rajeswaran
    email = kumaresan.rajeswaran@gmail.com
[github.com]
    user = krajewaran
[color]
	ui = true
[credential]
    helper = cache --timeout 7200
[help]
    autocorrect = 1
[core]
    mergeoptions = --no-edit
    editor = vim -f
	pager = diff-so-fancy | less --tabs=4 -RFX
[init]
    templatedir = ~/.git_template
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[merge]
tool = vim_mergetool
conflictstyle = diff3

[mergetool "vim_mergetool"]
cmd = nvim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
trustExitCode = true
