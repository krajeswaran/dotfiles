alias vi="nvim"
alias ls="ls --color=auto"
alias cat="bat"
export PATH=/usr/sbin:/usr/local/sbin:/usr/local/bin:${GRADLE_HOME}/bin:${ANDROID_HOME}/platform-tools:${ANDROID_HOME}/tools:${ANDROID_HOME}/tools/bin:${GEM_PATH}/bin:${HOME}/bin:${GOPATH}/bin:${HOME}/.node/bin:${HOME}/.local/bin:${PATH}
export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
export MANPATH=/usr/local/opt/coreutils/libexec/gnuman:${HOME}/.node/share/man:${MANPATH}

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

proj() {
	cd $(find -L ~/src -maxdepth 1 -type d | fzf)
}

xo() {
	open "$@" 2>/dev/null
}

export USE_CCACHE=1
export CCACHE_COMPRESS=1
export ANDROID_JACK_VM_ARGS="-Dfile.encoding=UTF-8 -XX:+TieredCompilation -Xmx4G"

# pyenv
export PATH="${HOME}/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
#eval "$(pyenv virtualenv-init -)"

###-tns-completion-start-###
