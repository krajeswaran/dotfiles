#!/bin/bash

# command line parsing fellows
while getopts dl opt
do
    case "$opt" in
      d)  DRYRUN="--dry-run";;
      l)  LOCALCOPY=on;;
      \?)               # unknown flag
          echo >&2 \
          "usage: $0 [-d] [-l]"
          exit 1;;
    esac
done
shift `expr $OPTIND - 1`

if [ "$LOCALCOPY" ]; then
    # faster rsync for localcopy
    rsync --verbose --stats --itemize-changes --human-readable --progress --archive --delete --exclude="lost+found" --whole-file --inplace --protect-args $DRYRUN "$1" "$2" 
else
    rsync --verbose --stats --itemize-changes --human-readable --progress --archive --delete --exclude="lost+found" --protect-args $DRYRUN "$1" "$2" 
fi
